{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "inference.py",
            "type": "debugpy",
            "request": "launch",
            "program": "inference.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--model_id=Qwen/Qwen3-4B",
                "--vllm_start_server=False",
                "--gen_kwargs=thinking",
                "--datasets=CSC",
                "--template_ids=0,1",
                "--splits=train,dev",
                "--n_examples=10",
                "--n_fewshot_examples=10",
                //"--only_run_missing_examples=true"
            ]
        },
        {
            "name": "Streamlit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/st_app/app.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}